<p id="notice"><%= notice %></p>

<h3 class=main_head>Usermaildata</h3>

<div class=container_new>
<button class=create_new_button><%= link_to 'New Usermaildatum', new_usermaildatum_path ,{style:'color:#FFFFFF;font-weight:550;'} %></button>
</div>
<br><br>

<table class=main_body>
  <thead>
    <tr>
      <th>Username</th>
      <th>Useremail</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @usermaildata.each do |usermaildatum| %>
      <tr>
        <td><%= usermaildatum.username %></td>
        <td><%= usermaildatum.useremail %></td>
        <td><%= usermaildatum.content %></td>
        <td><%= link_to 'Show', usermaildatum ,{style:'color:#FFFFFF;font-weight:550;'}%></td>
        <td><%= link_to 'Edit', edit_usermaildatum_path(usermaildatum) ,{style:'color:rgb(42, 157, 143);'} %></td>
        <td><%= link_to 'Destroy', usermaildatum, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>



<style>
.main_head{
  background-color:rgb(244, 162, 97);
  color:white;
  border-radius:5px;
  margin: 8px 150px;
  text-align:center;
  font-weight:550;
  padding:8px;
}
.main_body{
  background-color:rgb(127, 85, 57);
  color:white;
  border-radius:5px;
  text-align:center;
  font-weight:550;
  width:100%;
  table-layout:fixed;
  word-wrap:break-word;
  margin:10px 10px;
}

.create_new_button{
  background-color:rgb(42, 157, 143);
  color:white;
  border:none;
  border-radius:5px;
  padding:8px;
}

.container_new{
  text-align:center;
  position: absolute;
  left: 45%;
}
th,td{padding:10px;}
</style>